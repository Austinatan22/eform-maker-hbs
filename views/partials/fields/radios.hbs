<div class="mb-3">
  <label class="form-label d-block">
    {{label}}{{#if required}} <span class="text-danger">*</span>{{/if}}
  </label>
  {{#each options}}
    <div class="form-check">
      <input class="form-check-input" type="radio" name="{{../name}}" id="{{../name}}_{{@index}}" value="{{this}}" {{#if ../required}}required{{/if}}>
      <label class="form-check-label" for="{{../name}}_{{@index}}">{{this}}</label>
    </div>
  {{/each}}
</div>
